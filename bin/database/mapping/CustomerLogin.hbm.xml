<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="database.tables.CustomerLogin" table="CustomerLogin" dynamic-update="true">
		<id name="email" column="email"></id>
		
		<property name="firstName" column="firstName"></property>
		<property name="lastName" column="lastName"></property>
		<property name="contactNumber" column="contactNumber"></property>
		<property name="password" column="password"></property>
		<property name="securityQuestion" column="securityQuestion"></property>
		<property name="answer" column="answer"></property>
	</class>
</hibernate-mapping>